<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
	    <ul>
	    <% @book.errors.full_messages.each do |message| %>
	      <li><%= message %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="form-group">
		<label>Title</label>
		<%= f.text_field :title, class:"form-control" %>
	</div>
	<div class="form-group">
		<label>Opinion</label>
		<%= f.text_area :body, class:"form-control" %>
	</div>
	<%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
<%end%>

<%=link_to "Show", book_path(@book.id), class: "text-muted" %>
<%=link_to "Back", books_path, class: "text-muted" %>