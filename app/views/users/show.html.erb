<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
	<div class='row'>
		<div class="col-xs-3">
			<%= render 'shared/userinfo', user: @user %><!--user infoの表示-->
			<%= render 'books/form', book: @book %><!--book投稿formの表示-->

		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
				<table class="table table-hover">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @user.books.each do |book|%>
						<tr>
							<td><%=link_to  user_path(book.user.id) do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: " profile-img", fallback: "no_image.jpg", size:'50x50' %>
								<%end%>
							</td>
							<td><%=link_to book.title, book_path(book.id), class: "text-muted" %></td>
							<td><%= book.body%></td>
							<td>コメント数：<%= book.book_comments.count %></td>
						</tr>
						<%end%>
					</tbody>
				</table>
		</div>
	</div>
</div>


	